{
  "main": {
    "tag": "div",
    "class": "messages"
  },

  "message": {
    "tag": "div",
    "class": "message",
    "inner": [
      {
        "tag": "div",
        "class": "name",
        "inner": "%name%"
      },
	  {
		"tag": "div",
		"class": "date",
		"inner": "%date%"
	  },
      {
        "tag": "div",
        "class": "text",
        "inner": "%text%"
      }
    ]
  },

  "input": {
    "tag": "div",
    "class": "inputbar",
    "inner": [
      {
        "tag": "div",
        "class": "name"
      },
      {
        "tag": "div",
        "class": "text",
        "inner": {
          "tag": "form",
          "inner": [
            {
              "tag": "textarea",
              "class": "input",
              "placeholder": "Kommentar..."
            },
			{
				"tag": "br"
			},
            {
              "tag": "input",
              "class": "button",
              "type": "submit",
              "value": "Senden"
            }
          ],
          "onsubmit": "%onsubmit%"
        }
      }
    ]
  }
}